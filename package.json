{
    "name": "@colonise/config",
    "version": "0.0.0",
    "description": "Shareable config for all Colonise packages",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist/**/*.*",
        "default/**/*.*",
        ".gitignore",
        ".npmignore",
        ".travis.yml",
        "gulpfile.ts",
        "LICENSE",
        "README.md",
        "semantic-release.ts",
        "tsconfig.json",
        "tslint.json"
    ],
    "scripts": {
        "build": "gulp build",
        "lint": "gulp lint",
        "test": "gulp test",
        "coverage": "gulp coverage",
        "debug": "gulp debug",
        "pack": "npm pack",
        "dist": "gulp distribute"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Colonise/Config.git"
    },
    "keywords": [],
    "author": "Patrick Stanford",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Colonise/Config/issues"
    },
    "homepage": "https://github.com/Colonise/Config#readme",
    "devDependencies": {
        "@semantic-release/changelog": "^3.0.1",
        "@semantic-release/git": "^7.0.5",
        "@semantic-release/github": "^5.2.1",
        "@semantic-release/npm": "^5.0.5",
        "@types/del": "3.0.1",
        "@types/gulp": "4.0.5",
        "@types/gulp-istanbul": "^0.9.32",
        "@types/merge-stream": "^1.1.2",
        "@types/stream-to-promise": "^2.2.0",
        "alsatian": "^2.3.0",
        "del": "^3.0.0",
        "gulp": "^3.9.1",
        "gulp-istanbul": "^1.1.3",
        "gulp-merge": "^0.1.1",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-tslint": "^8.1.3",
        "gulp-typescript": "^4.0.2",
        "merge-stream": "^1.0.1",
        "nyc": "^12.0.2",
        "semantic-release": "^15.10.7",
        "stream-to-promise": "^2.2.0",
        "ts-node": "^7.0.1",
        "tsgulp": "^1.1.2",
        "tslint": "^5.11.0",
        "typescript": "^3.1.6"
    },
    "dependencies": {
        "@semantic-release/error": "^2.2.0",
        "tslib": "^1.9.3"
    },
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "include": [
            "dist/**/*.js"
        ],
        "exclude": [
            "dist/**/*.spec.js",
            "dist/**/index.js"
        ],
        "reporter": [
            "lcov",
            "html"
        ],
        "require": [],
        "extension": [
            ".js"
        ],
        "cache": true,
        "all": true
    },
    "release": {
        "extends": "./dist/semantic-release"
    }
}
